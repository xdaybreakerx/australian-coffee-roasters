---
import Header from "../components/Header.astro";
import FooterComponent from "../components/FooterComponent.astro";
---

<html lang="en" transition:animate="fade">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Discover Australia's finest coffee roasters with BeanFinder. Explore a curated list of roasters by state or find exclusive online multi-roaster subscriptions. Whether you're looking for a local cafÃ© or a unique online experience, BeanFinder connects you with the best in Australian coffee."
    />

    <!-- Open Graph meta tags -->
    <meta property="og:title" content="BeanFinder - Discover Australia's Finest Coffee Roasters" />
    <meta property="og:description" content="Explore a curated list of the best coffee roasters in Australia." />
    <meta property="og:image" content="https://beanfinder.coffee/beanfinder-og-image.png" />
    <meta property="og:url" content="https://beanfinder.coffee/" />
    <meta property="og:type" content="website" />

    <title>{Astro.props.title || "BeanFinder"}</title>
  </head>
    
    <!-- Google tag (gtag.js) -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-XX128J4Z0N"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());

    gtag('config', 'G-XX128J4Z0N');
  </script>
  
  <body class="flex flex-col min-h-svh mx-auto">
    <header>
      <Header />
      <!-- Named slot for dynamic content -->
      <slot name="header-content" />
    </header>
    <main class="flex-grow p-4">
      <slot />
    </main>
    <footer>
      <FooterComponent />
    </footer>
  </body>
</html>

---
const apiKey = import.meta.env.GOOGLE_MAPS_API_KEY;

let apiStatus = "Checking API...";

try {
  const response = await fetch(`https://maps.googleapis.com/maps/api/place/textsearch/json?query=test&key=${apiKey}`);
  
  if (response.ok) {
    apiStatus = "API accessible";
  } else {
    apiStatus = "API inaccessible";
  }
} catch (error) {
  apiStatus = "API inaccessible";
}
---

<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>API Test</title>
  </head>
  <body>
    <h1>{apiStatus}</h1>
  </body>
</html>
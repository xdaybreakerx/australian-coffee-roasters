---
import Layout from "../layouts/Layout.astro";
---
<Layout>
  <div
    class="grid grid-cols-1 md:grid-cols-2 gap-4 p-4 md:pt-16 mx-auto"
    id="wrapper"
  >
    <!-- Column 1 -->
    <div
      class="pb-16 flex flex-col justify-center items-center md:items-start"
      id="submission-received"
    >
      <h1 class="text-3xl font-bold pb-4 text-center md:text-left">...404!</h1>
      <p class="text-2xl pb-4 text-center md:text-left">coffee not found...</p>
      <p class="text-center md:text-left">
        <a href="/">Head back to the home page?</a>
      </p>
    </div>

    <div class="flex flex-col justify-center items-center md:items-end w-full">
      <div style="width:100%;height:100%;padding-bottom:50%;position:relative;">
        <iframe
          src="https://giphy.com/embed/BjFVEH3a3AEROWD0Gj"
          width="100%"
          height="100%"
          style="position:absolute"
          class="giphy-embed"></iframe>
      </div>
      <p class="text-center md:text-left">
        <a
          href="https://giphy.com/gifs/UOPX-coffee-uopx-university-of-phoenix-hPTZgtzfRIB5Nfb5rL"
          >via GIPHY</a
        >
      </p>
    </div>
  </div>
</Layout>

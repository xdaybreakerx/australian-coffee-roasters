---
const states = ["NSW", "VIC", "QLD", "WA", "SA", "TAS", "ACT", "NT"];
---

<div class="navbar bg-base-100 p-4">
  <div class="flex-1"></div>
  <div class="flex-none">
    <ul class="menu flex flex-col sm:flex-row items-start sm:items-center z-10">
      <li class="w-full sm:w-auto"><a href="/roasters/online-subscriptions/1">Online Multi-Roaster Subscriptions</a></li>
      <li class="w-full sm:w-auto">
        <details>
          <summary>View Roasters by State</summary>
          <ul class="bg-base-100 rounded-t-none p-2">
            {
              states.map((state) => (
                <li>
                  <a href={`/roasters/${state}/false/1`}>{state}</a>
                </li>
              ))
            }
          </ul>
        </details>
      </li>
    </ul>
  </div>
</div>
